
<div class="col-sm-6 col-sm-offset-3">

  <h1><span class="fa fa-sign-in"></span> create</h1>

  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>

  <!-- LOGIN FORM -->
  <form action="/create" method="post">
    <div class="form-group">
      <label>Username</label>
      <input type="text" class="form-control" name="username">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password">
    </div>

    <div class="form-group">
      <label>Family</label>
      <input type="text" class="form-control" name="group">
    </div>

    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email">
    </div>

    <h3>Invite</h3>
    <div class="checkbox">
      <label>
        <input type="checkbox" name="ceremony"> Attending ceremony
      </label>
    </div>

    <div class="checkbox">
      <label>
        <input type="checkbox" name="reception"> Attending reception
      </label>
    </div>

    <div class="checkbox">
      <label>
        <input type="checkbox" name="party"> Attending party
      </label>
    </div>

    <hr>

    <div class="checkbox">
      <label>
        <input type="checkbox" name="isAdmin"> Admin
      </label>
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Add</button>
  </form>


</div>

